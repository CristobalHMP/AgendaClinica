@model AgendaMedica.Models.Prevision
@{
    ViewData["Title"] = "Ingresar Prevision";
}

<h1>Ingresar Prevision</h1>

<div>
    <form asp-action="Create">
        <div>
            <label class="form-label">Prevision</label>
            <input type="text" class="form-control" asp-for="NombrePrev" />
        </div>
        <div class="mt-3 text-end">
            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
            <input type="reset" value="Limpiar" class="btn btn-outline-warning" />
            <input type="submit" value="Guardar" class="btn btn-outline-success" />
        </div>
    </form>
</div>